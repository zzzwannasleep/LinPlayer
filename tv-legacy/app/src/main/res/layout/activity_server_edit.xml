<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_focusable_bg"
                android:text="@string/back" />

            <TextView
                android:id="@+id/edit_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="@string/add_server"
                android:textSize="22sp" />
        </LinearLayout>

        <Spinner
            android:id="@+id/type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/tv_focusable_bg"
            android:entries="@array/server_type_entries"
            android:padding="12dp" />

        <EditText
            android:id="@+id/base_url_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/tv_focusable_bg"
            android:hint="@string/server_base_url_hint"
            android:inputType="textUri"
            android:padding="12dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/api_key_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/tv_focusable_bg"
            android:hint="@string/server_api_key_hint"
            android:inputType="text"
            android:padding="12dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/tv_focusable_bg"
            android:hint="@string/server_username_hint"
            android:inputType="text"
            android:padding="12dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/tv_focusable_bg"
            android:hint="@string/server_password_hint"
            android:inputType="textPassword"
            android:padding="12dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/display_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/tv_focusable_bg"
            android:hint="@string/server_display_name_hint"
            android:inputType="text"
            android:padding="12dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/remark_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/tv_focusable_bg"
            android:hint="@string/server_remark_hint"
            android:inputType="text"
            android:padding="12dp"
            android:singleLine="true" />

        <CheckBox
            android:id="@+id/activate_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/server_activate" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/tv_focusable_bg"
            android:text="@string/save" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/tv_focusable_bg"
            android:text="@string/delete" />
    </LinearLayout>
</ScrollView>

